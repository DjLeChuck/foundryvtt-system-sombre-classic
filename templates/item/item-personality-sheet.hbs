<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="__Nom" /></h1>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="level1">__Niveau 1</a>
    <a class="item" data-tab="level2">__Niveau 2</a>
    <a class="item" data-tab="level3">__Niveau 3</a>
  </nav>

  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="level1">
      {{> 'systems/sombre-classic/templates/item/parts/item-personality-level.hbs' level=1}}
    </div>
    <div class="tab attributes" data-group="primary" data-tab="level2">
      {{> 'systems/sombre-classic/templates/item/parts/item-personality-level.hbs' level=2}}
    </div>
    <div class="tab attributes" data-group="primary" data-tab="level3">
      {{> 'systems/sombre-classic/templates/item/parts/item-personality-level.hbs' level=3}}
    </div>
  </section>
</form>
